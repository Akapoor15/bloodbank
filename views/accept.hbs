<div style="display: flex; justify-content: center; align-items: center; height:10vh;">
        <div style="text-align: center;"><h1>Request</h1></div>
         </div>
         <br><br>
<div class="card" style="width: 18rem; margin-left: 40%;">
    <div class="card-body">
      <h5 class="card-title">Need Blood</h5>
      <p class="card-text">Will you be willing to donate blood?</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Name: {{this.name}}</li> <!--we are getting a each row name from this line--->
      <li class="list-group-item">Blood Group:{{this.bloodgroup}}</li>
      <li class="list-group-item">Mobile Number:{{this.phn}}</li>
      <li class="list-group-item">Priority:{{this.priority}}</li>
    </ul>
    <div class="card-body">
    <form action="accepted" method ="post">
    <input type="hidden" name="Name" value={{this.name}}>
    <input type="hidden" name="BloodGroup" value={{this.bloodgroup}}>
    <input type="hidden" name="MobileNumber" value={{this.phn}}>
    <input type="hidden" name="Priority" value={{this.priority}}>

    <button type="submit">Accept</button>
    </form>
    <br>
    <form action="rejected" method="post">
    <input type="hidden" name="Name" value={{this.name}}>
    <input type="hidden" name="BloodGroup" value={{this.bloodgroup}}>
    <input type="hidden" name="MobileNumber" value={{this.phn}}>
    <input type="hidden" name="Priority" value={{this.priority}}>
   <button type="submit">Reject</button>
    </form>
    </div>
  </div>
  <br><br><br><br><br><br>
{{/each}}
